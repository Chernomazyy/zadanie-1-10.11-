using System;

namespace project3
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = Convert.ToInt32(Console.ReadLine());
            int[] list = new int[n];
            int sum = 0;
            for(int i =0;i< n;i++)
            {
                list[i] = i;
            }
            for(int i = 0;i < list.Length;i++)
            {
                if (((i - 1)%2 == 0)&&((i + 1)%2 == 0) && i != 0)
                {
                    sum += i;
                }
            }
            Console.WriteLine(sum);
        }
       
    }
}
